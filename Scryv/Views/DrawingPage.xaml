<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:adv="clr-namespace:Scryv.Views.AdvanceDrawingView"
             xmlns:vm="clr-namespace:Scryv.ViewModel"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="Scryv.Views.DrawingPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False"
             x:DataType="vm:DrawingPageViewModel"
             Title="DrawingView"
             Background="{StaticResource White}">
    <ContentPage.BindingContext>
        <vm:DrawingPageViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>
        <Label Text="{Binding Prompt}"
               Grid.Column="0"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextColor="{StaticResource PrimaryDarkText}"
               FontSize="Medium"
               TextType="Text"
               FontAutoScalingEnabled="True" />
        <Frame CornerRadius="10"
               Margin="8"
               Padding="8"
               BackgroundColor="{StaticResource White}"
               Grid.Row="1" Grid.ColumnSpan="2">
            <Grid>
                <Image Source="{Binding ImageSource}"
                       Margin="8,8,8,8"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IsVisible="{Binding ShowTraceImage}" />
                <adv:AdvancedDrawingView BackgroundColor="Transparent"
                                         Lines="{Binding DrawingLines}"
                                         IsMultiLineModeEnabled="True" />
            </Grid>
        </Frame>
        <toolkit:DockLayout Grid.Row="2"
                            HorizontalOptions="Fill">
            <Button Text="Continue"
                    FontSize="Medium"
                    toolkit:DockLayout.DockPosition="Right"
                    BackgroundColor="{StaticResource ButtonColor}"
                    TextColor="{StaticResource White}"
                    Command="{Binding ContinueCommand}"
                    Margin="8"
                    WidthRequest="150" />
            <Button Text="Clear"
                    BackgroundColor="{StaticResource White}"
                    FontSize="Medium"
                    TextColor="{StaticResource ButtonColor}"
                    toolkit:DockLayout.DockPosition="Left"
                    WidthRequest="100"
                    Margin="8"
                    Command="{Binding ClearDrawingCommand}" />
            <HorizontalStackLayout toolkit:DockLayout.DockPosition="Top"
                                   HorizontalOptions="Center">
                <Label Text="Exercise"
                       Margin="0,0,5,0" />
                <Label Text="{Binding CurrentExerciseNumber}" />
                <Label Text="of"
                       Margin="5,0,5,0" />
                <Label Text="{Binding TotalExercises}" />
            </HorizontalStackLayout>
        </toolkit:DockLayout>
    </Grid>
</ContentPage>